function solution(array) {
    var result = [];
    var index = 0;
    var max = 0;
    
    for(let i = 0; i < array.length; i++) {
        if(max < array[i]) {
            max = array[i];
            index = i;
        }
    }
    
    result.push(max);
    result.push(index);
    
    return result;
}

// 1. array값이 max보다 크면 max와 index저장하기
// 2. result에 max, index 추가하기
